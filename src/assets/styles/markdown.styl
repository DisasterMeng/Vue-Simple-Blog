.article
    color #333
    blockquote 
        color #7a7a7a
        border-left 5px solid #ccc
        padding-left 15px
        font-size 16px
        margin-bottom 15px
    h1
        font-size 24px
        font-weight 600
        line-height 40px
        margin-bottom 15px
    h2
        font-size 20px
        font-weight 600
        line-height 40px
        margin-bottom 15px
    h3
        font-size 16px
        font-weight 600
     
    h4
        font-size 12px
        font-weight 600
     
    .codehilite
        background-color: #f6f8fa
        width 100%
        border-radius 3px
        overflow-x auto
        margin-bottom 16px
        font-size 85%
        line-height 1.45
        
        code
            // width 100% 
            display block
            padding: 16px
            // overflow hidden
    ul
        margin 15px 30px
        li
            padding-left 20px
            position relative
            &::before
                content ''
                position absolute
                left 0
                top 15px
                margin-top -3px
                width 6px
                height 6px
                border-radius 100%
                background-color #444

    strong
        font-weight 600
    img
        width 100%   
    p
        margin-bottom 16px
        a
            color #f0534e
            
        
        
